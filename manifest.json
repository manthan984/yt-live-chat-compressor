{
  "manifest_version": 3,
  "name": "YouTube Live Chat Compressor",
  "version": "1.0",
  "description": "Compresses repeated messages in YouTube Live Chat without deletion.",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube.com/live_chat*"
      ],
      "js": ["content/chatObserver.js"],
      "css": ["styles/chatStyles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
